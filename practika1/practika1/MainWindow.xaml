<Window x:Class="practika1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <TabControl>
         
            <TabItem Header="Delivery">
                <DataGrid x:Name="DeliveryDataGrid" SelectionChanged="DeliveryDataGrid_SelectionChanged"/>
            </TabItem>

         
            <TabItem Header="Products">
                <DataGrid x:Name="ProductsDataGrid" SelectionChanged="ProductsDataGrid_SelectionChanged"/>
            </TabItem>

 
            <TabItem Header="Orders">
                <DataGrid x:Name="OrdersDataGrid" SelectionChanged="OrdersDataGrid_SelectionChanged"/>
            </TabItem>
        </TabControl>
    </Grid>
</Window>
